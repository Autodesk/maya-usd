<fragment uiName="usdPreviewSurfaceShadowAPI2" name="usdPreviewSurfaceShadowAPI2" type="plumbing" class="ShadeFragment" version="1.0" feature_level="0">
    <description>
        Add the color finalizer that allows computing shadow maps.
    </description>
    <properties>
        <!-- Important inputs: -->
        <struct name="inSurface" struct_name="mayaSurfaceShaderOutput"/>
        <!-- Varying inputs: -->
        <float3 name="Pw" semantic="Pw" flags="varyingInputParam" />
    </properties>
    <values>
    </values>
    <outputs>
        <struct name="outSurface" struct_name="mayaSurfaceShaderOutput"/>
    </outputs>
    <implementation>
        <implementation render="OGSRenderer" language="Cg" lang_version="2.1">
            <function_name val="mayaUsdAdjustColor"/>
            <source>
                <![CDATA[
mayaSurfaceShaderOutput
mayaUsdAdjustColor(mayaSurfaceShaderOutput inSurface, vec3 Pw)
{
    inSurface.outSurfaceFinal = mayaAddLightEffectsToColor(inSurface.outSurfaceFinal, Pw);
    return inSurface;
}
]]>
            </source>
        </implementation>
        <implementation render="OGSRenderer" language="GLSL" lang_version="3.0">
            <function_name val="mayaUsdAdjustColor"/>
            <source>
                <![CDATA[
mayaSurfaceShaderOutput
mayaUsdAdjustColor(mayaSurfaceShaderOutput inSurface, vec3 Pw)
{
    inSurface.outSurfaceFinal = mayaAddLightEffectsToColor(inSurface.outSurfaceFinal, Pw);
    return inSurface;
}
]]>
            </source>
        </implementation>
        <implementation render="OGSRenderer" language="HLSL" lang_version="10.0">
            <function_name val="mayaUsdAdjustColor"/>
            <source>
                <![CDATA[
mayaSurfaceShaderOutput
mayaUsdAdjustColor(mayaSurfaceShaderOutput inSurface, float3 Pw)
{
    inSurface.outSurfaceFinal = mayaAddLightEffectsToColor(inSurface.outSurfaceFinal, Pw);
    return inSurface;
}
]]>
            </source>
        </implementation>
    </implementation>
</fragment>