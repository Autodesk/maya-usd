# plugInfo.json
{
    "Plugins": [
        {
            "Info": {
                "SdfMetadata": {
                    # Selectability controls Maya viewport selectability with the mouse.
                    # It is enforced via the ProxyRenderDelegate via its getInstancedSelectionPath()
                    # function.
                    "mayaSelectability": {
                        "type": "token",
                        "appliesTo": "prims"
                    },
                    # Editability controls the editability or properties.
                    # If set, can be "on" (editable) or "off" (locked).
                    # If missing, defaults to "on" (editable).
                    "mayaEditability": {
                        "type": "token",
                        "appliesTo": "properties",
                        "default": "on"
                    }
                }
            },
            "Name": "MayaUsdUtilsMetadata",
            "Type": "resource"
        }
    ]
}

